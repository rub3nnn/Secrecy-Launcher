{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "resources/updater-generator.ts"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"]
  },
  "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@ui/*": ["./src/components/ui/*"]
    }
}
